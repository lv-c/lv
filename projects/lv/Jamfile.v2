

import path ;
import sequence ;
import indirect ;



project lv/lv
	: requirements <conditional>@include_directx
;


local lv_sources = 
	[ path.glob-tree lv/src/lv : *.cpp : .svn ] 
	;

local rule prefix ( x )
{
	return $(PRJ_ROOT)/$(x) ;
}

lv_sources = [ sequence.transform prefix : $(lv_sources) ] ;

for l in $(lv_sources)
{
	echo $(l) ;
}


lib lvconditional
	: $(lv_sources)
	: <link>static
	;



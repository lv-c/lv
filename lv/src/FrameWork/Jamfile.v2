import project ;

project.initialize $(__name__) ;
.project = [ project.current ] ;


rule source ( properties * )
{
	local exclude = [ conditional-exclude $(properties) : openssl/conf.h : SSL* ] ;
	return [ build-source $(.project) : $(exclude) ] ;
}


lib FrameWork : : <link>static <tag>@tag-names <conditional>@source ;


install stage
	: FrameWork
	: <location>../../../bin/lv
	  <install-type>LIB
	;


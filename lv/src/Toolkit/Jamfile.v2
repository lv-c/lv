import project ;

project.initialize $(__name__) ;
.project = [ project.current ] ;


rule source ( properties * )
{
	local exclude = [ conditional-exclude $(properties) : luabind/luabind.hpp : Lua ] ;

	return [ build-source $(.project) : $(exclude) ] ;
}


lib Toolkit 
	:
	: <link>static
	  <tag>@tag-names
	  <conditional>@source
	;

install stage
	: Toolkit
	: <location>../../../bin/lv
	  <install-type>LIB
	;

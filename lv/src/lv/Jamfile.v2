import project ;


project.initialize $(__name__) ;
.project = [ project.current ] ;


rule source ( properties * )
{
	local exclude = ZeroMQ Graphics UI MyZipReader.cpp ;
	exclude += [ conditional-exclude $(properties) : Luabind/Luabind.hpp : Lua Luabind ] ;

	return [ build-source $(.project) : $(exclude) ] ;
}


lib lv2
	:
	: <link>static 
	  <tag>@tag-names
	  <conditional>@source
	;

install stage
	: lv2
	: <location>../../../bin/lv
	  <install-type>LIB
	;

